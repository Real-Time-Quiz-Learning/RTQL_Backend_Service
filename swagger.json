                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/error_response"
                                },
                                "examples": {
                                    "error": {
                                        "summary": "error logging in",
                                        "value": {
                                            "message": "Error logging in!"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
