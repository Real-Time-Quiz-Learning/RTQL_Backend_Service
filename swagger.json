    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Enter JWT Bearer token **_only_**"
            }
        },
        "schemas": {
            "login_user": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "pass": {
                        "type": "string"
                    }
                }
            },
            "signup_user": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "fname": {
                        "type": "string"
                    },
                    "lname": {
                        "type": "string"
                    },
                    "pass": {
                        "type": "string"
                    }
                }
            },
            "auth_details": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "send_question": {
                "type": "object",
                "properties": {
                    "input": {
                        "type": "string"
                    },
                    "questions": {
                        "type": "integer"
                    }
                }
            },
            "send_question_response": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "questions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/question"
                        }
                    }
                }
            },
            "question": {
                "type": "object",
                "properties": {
                    "question": {
                        "type": "string"
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "correct": {
                        "type": "integer"
                    }
                }
            },
            "answer": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "qid": {
                        "type": "integer"
                    },
                    "rtext": {
                        "type": "string"
                    },
                    "correct": {
                        "type": "integer"
                    }
                }
            },
            "get_answers_response": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "answers": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/answer"
                        }
                    }
                }
            },
            "save_response": {
                "type": "obect",
                "properties": {
                    "qid": {
                        "type": "integer"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            },
            "update_question": {
                "type": "object",
                "properties": {
                    "question": {
                        "type": "string"
                    },
                    "qid": {
                        "type": "integer"
                    }
                }
            },
            "delete_question": {
                "type": "object",
                "properties": {
                    "qid": {
                        "type": "integer"
                    }
                }
            },
            "delete_answer": {
                "type": "object",
                "properties": {
                    "rid": {
                        "type": "integer"
                    }
                }
            },
            "update_answer": {
                "type": "object",
                "properties": {
                    "response": {
                        "type": "string"
                    },
                    "rid": {
                        "type": "integer"
                    },
                    "correct": {
                        "type": "boolean"
                    }
                }
            },
            "error_response": {
                "type": "obect",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                }
            }
        }
    }
}