        "/question/send": {
            "post": {
                "tags": [
                    "question"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/send_question"
                            },
                            "examples": {
                                "mars": {
                                    "summary": "ask 1 question about the solar system.",
                                    "value": {
                                        "input": "questions about the solar system.",
                                        "questions": 1
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "questions you requested with responses and the correct answer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/send_question_response"
                                },
                                "examples": {
                                    "mars": {
                                        "summary": "ask for 1 question about the solar system.",
                                        "value": {
                                            "message": "Here are some great questions!",
                                            "questions": [
                                                {
                                                    "question": "Which planet is known as the Red Planet?",
                                                    "options": [
                                                        "Jupiter",
                                                        "Venus",
                                                        "Earth",
                                                        "Mars"
                                                    ],
                                                    "correct": 3
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/error_response"
                                },
                                "examples": {
                                    "error": {
                                        "summary": "error getting question",
                                        "value": {
                                            "message": "Error getting question!"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
