{
    "openapi": "3.0.4",
    "info": {
        "title": "RTQL API",
        "description": "<h1>RTQL API</h1><p>Use RTQL's API to generate quiz questions!</p>",
        "version": "1.0.0"
    },

    "servers": [
        {
            "url": "http://64.181.233.131:3677",
            "description": "RTQL API service base route."
        },
        {
            "url": "http://localhost:3677",
            "description": "RTQL API service base route if developing on a machine."
        },
        {
            "url": "http://64.181.233.131:3677/api/v1",
            "description": "RTQL API version 1 base route (proper)."
        }
    ],

    "paths": {
        "/login": {
            "post": {
                "tags": [ "login" ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/login_user"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/auth_details"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/signup": {
            "post": {
                "tags": [ "signup" ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/signup_user"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/auth_details"
                                }
                            }
                        }
                    }
                }
            }
        },

        "/question/send": {
            "post": {
                "tags": [ "question" ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/send_question"
                            },
                            "examples": {
                                "mars": {
                                    "summary": "ask 1 question about the solar system.",
                                    "value": {
                                        "input": "questions about the solar system.",
                                        "questions": 1
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "questions you requested with responses and the correct answer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/send_question_response" 
                                },
                                "examples": {
                                    "mars": {
                                        "summary": "ask for 1 question about the solar system.",
                                        "value": {
                                            "message": "Here are some great questions!",
                                            "questions": [
                                                {
                                                    "question": "Which planet is known as the Red Planet?",
                                                    "options": [
                                                        "Jupiter",
                                                        "Venus",
                                                        "Earth",
                                                        "Mars"
                                                    ],
                                                    "correct": 3
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/question/save": {
            "post": {
                "tags": [ "question" ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/question"
                            },
                            "examples": {
                                "mars": {
                                    "summary": "save a question about the solar system.",
                                    "value": {
                                        "question": "Which planet is known as the Red Planet?",
                                        "options": [
                                            "Jupiter",
                                            "Venus",
                                            "Earth",
                                            "Mars"
                                        ],
                                        "correct": 3
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "saved question confirmation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object"
                                },
                                "examples": {
                                    "save": {
                                        "summary": "save a question about the solar system.",
                                        "value": {
                                            "message": "Question saved successfully!"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/question/getSaved": {
            "get": {
                "tags": [ "question" ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/question/getAnswers": {
            "get": {
                "tags": [ "question" ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/question/update": {
            "put": {
                "tags": [ "question" ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/question/delete": {
            "delete": {
                "tags": [ "question" ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/question/updateAnswer": {
            "put": {
                "tags": [ "question" ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/question/deleteAnswer": {
            "delete": {
                "tags": [ "question" ],
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },

    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT",
                "description": "Enter JWT Bearer token **_only_**"
            }
        },
        "schemas": {
            "login_user": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "pass": {
                        "type": "string"
                    }
                }
            },
            "signup_user": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "fname": {
                        "type": "string"
                    },
                    "lname": {
                        "type": "string"
                    },
                    "pass": {
                        "type": "string"
                    }
                }
            },
            "auth_details": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "token": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            },
            "send_question": {
                "type": "object",
                "properties": {
                    "input": {
                        "type": "string"
                    },
                    "questions": {
                        "type": "integer"
                    }
                }
            },
            "send_question_response": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "questions": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/question"
                        }
                    }
                }
            },
            "question": {
                "type": "object",
                "properties": {
                    "question": {
                        "type": "string"
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "correct": {
                        "type": "integer"
                    }
                }
            }
        }
    }
}
